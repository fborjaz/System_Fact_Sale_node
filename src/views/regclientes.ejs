<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Registrar Cliente</title>
  <%- include('partials/header') %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/interfaces/css/regclientes.css">
</head>

<body>
  <%- include('partials/navigation') %>

  <div class="container mt-5">
    <h2>Registrar Nuevo Cliente</h2>
    <form class="form-group" method="POST" action="/clientes">
      <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Nombre" required>
      </div>

      <div class="form-group">
        <label for="apellido">Apellido:</label>
        <input type="text" id="apellido" name="apellido" class="form-control" placeholder="Apellido" required>
      </div>

      <div class="form-group">
        <label for="dni">Cédula:</label>
        <input type="text" id="dni" name="dni" class="form-control" placeholder="Cédula" required>
      </div>

      <div class="form-group">
        <label for="tipo">Tipo de Cliente:</label>
        <select id="tipo" name="tipo" class="form-control" onchange="mostrarOpciones()">
          <option value="regular">Cliente Regular</option>
          <option value="vip">Cliente VIP</option>
        </select>
      </div>

      <div class="form-group" id="cardField">
        <label for="card">¿Tiene tarjeta de descuento?</label>
        <input type="checkbox" id="card" name="card">
      </div>

      <div class="form-group" id="limitField">
        <label for="limit">Límite de crédito:</label>
        <input type="number" id="limit" name="limit" class="form-control" placeholder="Límite de crédito" min="0">
      </div>

      <button type="submit" class="btn btn-primary">Registrar Cliente</button>
    </form>
  </div>

  <script>
    function mostrarOpciones() {
      const tipoCliente = document.getElementById('tipo').value;
      const cardField = document.getElementById('cardField');
      const limitField = document.getElementById('limitField');

      if (tipoCliente === 'regular') {
        cardField.style.display = 'block';
        limitField.style.display = 'none';
      } else if (tipoCliente === 'vip') {
        cardField.style.display = 'none';
        limitField.style.display = 'block';
      }
    }
  </script>
</body>

</html>
